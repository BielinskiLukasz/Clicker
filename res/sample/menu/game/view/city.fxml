<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/8.0.121"
        prefHeight="700.0" prefWidth="820.0"
        styleClass="city">

    <GridPane
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="head"
            xmlns="http://javafx.com/javafx/8.0.121"
            prefHeight="100.0" prefWidth="820.0">

        <Label
                fx:id="cityIncome"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
                alignment="CENTER"
                prefHeight="50.0" prefWidth="410.0"
                text="City income: /income/ $/s"/>

        <Label
                fx:id="worldIncome"
                GridPane.columnIndex="1"
                GridPane.rowIndex="0"
                alignment="CENTER"
                prefHeight="50.0" prefWidth="410.0"
                text="EMPTY"/>

    </GridPane>

    <VBox
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            GridPane.columnSpan="2"
            fx:id="roomsViewList"/>

    <Button
            fx:id="visitButton"
            onAction="#visitCity"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="2"
            GridPane.rowSpan="3"
            prefHeight="150.0" prefWidth="300.0"
            text="Visit City"/>

    <columnConstraints>
        <ColumnConstraints halignment="CENTER"
                           hgrow="ALWAYS"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints valignment="CENTER"
                        vgrow="ALWAYS"/>
    </rowConstraints>

</GridPane>
